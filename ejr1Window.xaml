        <ListView x:Name="show" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="73,103,73,36">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="btnCalcular" Content="Calcular" HorizontalAlignment="Left" Margin="448,58,0,0" VerticalAlignment="Top" Height="27" Width="75" Click="btnCalcular_Click"/>
        <Button x:Name="btnReset" Content="Reset" HorizontalAlignment="Left" Margin="39,27,0,0" VerticalAlignment="Top" Click="btnReset_Click"/>

    </Grid>
</Window>
